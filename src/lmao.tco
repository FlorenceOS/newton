fn strlen(ptr: *const u8) u64 {
    var res: u64 = 0;
    loop {
        if(ptr[res] == 0) {
            return res;
        }
        res += 1;
    }
}

const SYS_WRITE = 1;

fn print(buf: *const u8) u64 {
    return @syscall(SYS_WRITE, 1, buf, strlen(buf));
}

fn main() u64 {
    print("Hello, world!\n".&);
    return 0;
}
